@{
    ViewBag.Title = "Map";
}
<!-- Custom styles for this template -->
<style>
    label {
        font-weight: normal;
    }
    input[type="radio"], input[type="checkbox"] {
        margin: 0;
    }
    #loading {
        position: absolute;
        width: 220px;
        height: 19px;
        top: 50%;
        left: 50%;
        margin: -10px 0 0 -110px;
        z-index: 20001;
    }
    .tt-dropdown-menu {
        overflow: auto;
    }
    .tt-hint, .tt-query {
        display: block;
        width: 100%;
        height: 34px;
        padding: 6px 12px;
        font-size: 14px;
        border-radius: 4px;
    }
    .typeahead-header {
        margin: 0 5px 5px 5px;
        padding: 3px 0;
        border-bottom: 1px solid #ccc;
    }
    .search-container {
        width: 250px;
    }
    #searchbox {
        -webkit-border-top-left-radius: 4px;
        -webkit-border-bottom-left-radius: 4px;
        -moz-border-top-left-radius: 4px;
        -moz-border-bottom-left-radius: 4px;
        border-top-left-radius: 4px;
        border-bottom-left-radius: 4px;
    }
    .leaflet-top {
        top: 50px;
    }
    .leaflet-control-layers-base input, .leaflet-control-layers-overlays input {
        float: left;
        margin-right: 6px;
    }
    .leaflet-control-layers-expanded {
        opacity: 0.9;
    }
    .leaflet-popup-content {
        margin-top: 14px;
        margin-bottom: 0px;
        margin-left: 20px;
        margin-right: 20px;
    }
    @@media (max-width: 992px) {
        .navbar .navbar-brand {
            font-size: 18px;
            float: left;
        }
        .search-container {
            width: 150px;
        }
        .leaflet-control-attribution {
            display: none;
        }
    }
        
    .olControlZoom {
        margin-top: 44px;
        margin-left: -6px;
    }
        
    .olControlZoomIn, .olControlZoomOut {
        background-color: rgb(255,255,255) !important;
        width: 34px !important;
        height: 34px !important;
        color: rgb(90, 85, 80) !important;
        border: 1px solid #999 !important;
        padding-top: 6px !important;
    }
    .olControlZoomOut {
        margin-top: -3px !important;
    }
    .olControlAttribution {
        bottom: 38px !important;
    }
    .olBingAttribution a {
        display: none !important;
    }

    #legend {
        position: absolute;
        bottom: 60px;
        z-index: 1005;
        left: 6px;
    }
    #legend .btn {
        background-color: rgb(255,255,255) !important;
        width: 34px !important;
        height: 34px !important;
        color: rgb(90, 85, 80) !important;
        border: 1px solid #999 !important;
        background-image: url(img/layers.png);
        background-position: 3px 3px;
        background-repeat: no-repeat;
    }
    #legend .dropdown-menu {
        font-weight: 800;
        font-size: 1.75em;
        line-height: 42px;
        font-family: 'Trebuchet MS';
        width: 306px;
        padding-left: 12px;
    }
    #legend .dropdown-menu li {
        cursor: pointer;
        margin-top: 4px;
        margin-bottom: 4px;
        width: 278px;
        border-radius: 8px;
        text-align: left;
        border: 1px solid #ccc;
        padding-left: 12px;
        position: relative;
        overflow: hidden;
    }
    #legend .dropdown-menu li>i {
        color: black; 
        width:24px;
        height:28px;
        display:inline-block;
        padding-top: 0px;
        background-repeat: no-repeat;
        background-position: 0px 0px;
        vertical-align: text-bottom;
    }
    #legend .dropdown-menu li>.switch-mini {
        position: absolute;
        right: 8px;
        top: 11px;
    }
    #legend .dropdown-menu li>.color-key {
        position: absolute;
        left: 0px;
        top: 0px;
        width: 6px;
        height: 100%;
        display: block;
    }

    body.modal-open, .modal, .modal-backdrop {
        overflow: hidden !important;
    }
    .modal, .modal-backdrop { 
        position: absolute; 
    }
    .modal-title {
        font-size: 1.85em;
        font-weight: bold;
    }
    .modal-body {
        font-size: 1.15em;
        font-weight: normal;
    }
</style>
<script data-main="/Scripts/main" src="/Scripts/lib/requirejs/require.js" type="text/javascript"></script>
<h2>Map</h2>

<div id="map" class="fullmap" style="height: 700px"></div>
    
    
<div id="loading" style="display:block;">
    <div class="loading-indicator">
        <div class="progress progress-striped active">
            <div class="progress-bar progress-bar-info" style="width: 100%"></div>
        </div>
    </div>
</div>